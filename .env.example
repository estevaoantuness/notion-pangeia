# ────────────────────────────────────────────────────────────────
# FASE 0 · Core Secrets (Render / Local)
# ────────────────────────────────────────────────────────────────
ENVIRONMENT=development           # production no Render
LOG_LEVEL=INFO
PORT=8000

# ────────────────────────────────────────────────────────────────
# FASE 1 · Notion (fonte de verdade)
# ────────────────────────────────────────────────────────────────
NOTION_TOKEN=secret_your_notion_integration_token_here
NOTION_TASKS_DB_ID=your_tasks_database_id_here
NOTION_USERS_DB_ID=optional_users_db_id
NOTION_CHECKINS_DB_ID=optional_checkins_db_id
NOTION_INSIGHTS_DB_ID=optional_insights_db_id

# ────────────────────────────────────────────────────────────────
# FASE 2 · PostgreSQL (cache persistente + usuários dinâmicos)
# ────────────────────────────────────────────────────────────────
DATABASE_URL=postgresql://user:pass@host:5432/notion_pangeia
PG_POOL_MIN=1
PG_POOL_MAX=10
PG_TASK_CACHE_TTL_HOURS=24

# ────────────────────────────────────────────────────────────────
# FASE 3 · Evolution WhatsApp (entrada/saída)
# ────────────────────────────────────────────────────────────────
EVOLUTION_API_URL=https://pange-evolution-api.u5qiqp.easypanel.host
EVOLUTION_API_KEY=429683C4C977415CAAFCCE10F7D57E11
EVOLUTION_INSTANCE_NAME=Pange.IA Bot
EVOLUTION_WEBHOOK_AUTH_REQUIRED=false

# ────────────────────────────────────────────────────────────────
# FASE 4 · Áudio (opcional) / OpenAI futuros
# ────────────────────────────────────────────────────────────────
OPENAI_API_KEY=optional_for_audio_or_future_llm
GPT_MODEL=gpt-4o-mini
MAX_CONVERSATION_HISTORY=20
TEMPERATURE=0.7
LOG_CONVERSATIONS=true

# ────────────────────────────────────────────────────────────────
# FASE 5 · Redis (memória conversacional opcional)
# ────────────────────────────────────────────────────────────────
REDIS_URL=redis://localhost:6379
REDIS_TTL_HOURS=24

# ────────────────────────────────────────────────────────────────
# Flask / Webhook
# ────────────────────────────────────────────────────────────────
FLASK_SECRET_KEY=your-secret-key-here
WEBHOOK_PATH=/webhook/whatsapp

# ────────────────────────────────────────────────────────────────
# Scheduler (check-ins automáticos) · manter OFF se for reativo
# ────────────────────────────────────────────────────────────────
SCHEDULER_ENABLED=true
DAILY_SEND_TIME=08:00
CHECKIN_1_TIME=13:30
CHECKIN_2_TIME=15:30
CHECKIN_3_TIME=18:00
CHECKIN_4_TIME=22:00
TIMEZONE=America/Sao_Paulo

# ────────────────────────────────────────────────────────────────
# Feature Flags
# ────────────────────────────────────────────────────────────────
ENABLE_PSYCHOLOGY=false
ENABLE_MESSAGE_CHUNKING=true
ENABLE_DEDUPLICATION=true
